@model BookNGo.Models.House

@*@{
        ViewBag.Title = "Delete House";
}*@

<h2>Remove @Model.Title</h2>

<hr />

<h3>Do you want to remove this house?</h3>

<table class="table table-striped table-hover">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Title)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th>@Html.DisplayNameFor(model => model.Address)</th>
        <th>@Html.DisplayNameFor(model => model.MaxOccupancy)</th>
        <th>@Html.DisplayNameFor(model => model.PricePerNight)
        <th>@Html.DisplayNameFor(model => model.LocationId)</th>
    </tr>
    <tr style="font-size: 115%; padding-top: 15px;">
        <td>@Html.DisplayFor(model => model.Title)</td>
        <td>@Html.DisplayFor(model => model.Description)</td>
        <td>@Html.DisplayFor(model => model.Address)</td>
        <td>@Html.DisplayFor(model => model.MaxOccupancy)</td>
        <td>@Html.DisplayFor(model => model.PricePerNight)
        <td>@Html.DisplayFor(model => model.LocationId)</td>
    </tr>
</table>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Remove" class="btn btn-danger btn-sm" />
        @Html.ActionLink("Back", "MyHouses", "Houses", null, new { @class = "btn btn-info btn-sm" })
    </div>
    }
</div>