@model IEnumerable<BookNGo.Models.Reservation>

@*@{
    ViewBag.Title = "Index";
}*@

<h2>Reservations</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.House.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfOccupants)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBooking)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comments)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceCharged)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.ApplicationUserId)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="font-size: 115%; padding-top: 15px;">
            @Html.DisplayFor(modelItem => item.House.Title)
        </td>
        <td style="font-size: 115%; padding-top: 15px;">
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td style="font-size: 115%; padding-top: 15px;">
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td style="font-size: 115%; padding-top: 15px;">
            @Html.DisplayFor(modelItem => item.NumberOfOccupants)
        </td>
        <td style="font-size: 115%; padding-top: 15px;">
            @Html.DisplayFor(modelItem => item.DateOfBooking)
        </td>
        <td style="font-size: 115%; padding-top: 15px;">
            @Html.DisplayFor(modelItem => item.Comments)
        </td>
        <td style="font-size: 115%; padding-top: 15px;">
            @Html.DisplayFor(modelItem => item.PriceCharged)
        </td>
        <td style="font-size: 115%; padding-top: 15px;">
            @*@Html.DisplayFor(modelItem => item.ApplicationUserId)*@
        </td>
        <td style="font-size: 115%; padding-top: 15px;">
            @Html.ActionLink("Details", "Details", new { id=item.ReservationId }, new {@class="btn btn-warning btn-sm" })
            @Html.ActionLink("Cancel", "Delete", new { id=item.ReservationId }, new { @class = "btn btn-danger btn-sm" }) 
        </td>
    </tr>
}

</table>
<div>
    @Html.ActionLink("Back", "AdminPage", "Home", null, new { @class="btn btn-info"})
</div>