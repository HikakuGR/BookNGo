
@model BookNGo.ViewModels.SearchViewModel
@{
    ViewBag.Title = "Search";
}

<h2>Search Form</h2>

@using (Html.BeginForm("Search", "Home", FormMethod.Get, new { @class = "multi-data/form-control" }))
{
<div class="form-horizontal">

    <div class="form-group">
        @Html.LabelFor(m => m.SearchLocation, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Location", (SelectList)ViewBag.Location, "Please select", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SearchLocation)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SearchCategory, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Category", (SelectList)ViewBag.Category, "Please select", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SearchCategory)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SearchStartDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.EditorFor(m => m.SearchStartDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @Html.ValidationMessageFor(m => m.SearchStartDate)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SearchEndDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.SearchEndDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @Html.ValidationMessageFor(m => m.SearchEndDate)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SearchMaxOccupancy, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SearchMaxOccupancy, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SearchMaxOccupancy)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-7">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>

</div>
}