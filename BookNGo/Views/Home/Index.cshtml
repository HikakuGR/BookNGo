@model IEnumerable<BookNGo.Models.House>

@{
    ViewBag.Title = "Index";
}

<p>
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {

    <div class="form-horizontal">
        <h2>Search</h2>
        <hr/>
        <div class="col-md-2">
            @Html.DisplayName("Start Date:")
            @Html.TextBox("startDate", "", new { @class = "form-control", type = "date" })
        </div>

        <div class="col-md-2">
            @Html.DisplayName("End Date:")
            @Html.TextBox("endDate", "", new { @class = "form-control", type = "date" })
        </div>

        <div class="col-md-2">
            @Html.DisplayName("Location:")
            @Html.DropDownList("location", (SelectList)ViewBag.Location, "Please select", htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="col-md-2">
            @Html.DisplayName("Category:")
            @Html.DropDownList("category", (SelectList)ViewBag.Category, "Please select", htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="col-md-2">
            @Html.DisplayName("Max Occupancy:")
            @Html.Editor("occupancy", new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="col-md-2">
            @Html.DisplayName("Click And Find Your Home!")
            <input type="submit" value="Search" class="btn btn-default" />
        </div>

    </div>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxOccupancy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerNight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxOccupancy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PricePerNight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location.LocationName)
        </td>
        <td>
            @Html.ActionLink("Book It", "BookIt", "Reservations", new { houseId = item.HouseId }, null) |
            @Html.ActionLink("Details", "Details", new { id = item.HouseId })
        </td>
    </tr>
    }

</table>
